{
  "name": "reveal-canvas",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently --kill-others \"npm run slides:dev\" \"npm run animation:dev\"",
    "animation:dev": "cd animations && npm run watch",
    "slides:dev": "vite",
    "animation:build": "cd animations && npm run build",
    "build": "npm run animation:build && tsc && vite build",
    "preview": "vite preview",
    "lint": "npm run eslint && npm run prettier",
    "format": "npm run eslint:fix && npm run prettier:fix",
    "eslint": "eslint \"**/*.ts?(x)\"",
    "eslint:fix": "eslint --fix \"**/*.ts?(x)\"",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write ."
  },
  "devDependencies": {
    "@types/reveal.js": "^4.4.3",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "concurrently": "^8.2.1",
    "eslint": "^8.50.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "prettier": "^3.0.3",
    "reveal.js": "^4.6.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.10",
    "vite-plugin-static-copy": "^0.17.0"
  },
  "dependencies": {
    "@motion-canvas/core": "^3.10.0",
    "@motion-canvas/player": "^3.10.0"
  }
}
